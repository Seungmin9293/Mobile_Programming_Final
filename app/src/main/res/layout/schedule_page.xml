<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0EBF8">

        <!--상단 툴바-->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="#31ACB1"
            android:textAlignment="viewStart"
            android:backgroundTint="#2196F3"
            android:elevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!--툴바 제목 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시험일정"
                android:layout_gravity="start"
                android:textSize="25sp"
                android:padding="10dp"
                android:textColor="#FFFFFFFF"
                android:textStyle="bold"/>

            <!--툴바 알람 버튼 -->
            <ImageButton
                android:id="@+id/toolbar_add_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@drawable/al"
                android:padding="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="알람"
                app:tint="#FFFFFFFF" />
        </androidx.appcompat.widget.Toolbar>

        <!--스크롤뷰-->
        <ScrollView
            android:id="@+id/scroll_view_schedule"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toTopOf="@id/bottom_navigation_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!--달력 영역 -->
                <LinearLayout
                    android:id="@+id/calendar_card_section"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/small_radius"
                    android:elevation="2dp"
                    android:orientation="vertical"
                    android:padding="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <!--달력 제목 텍스트 -->
                    <TextView
                        android:id="@+id/text_calendar_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="12dp"
                        android:text="달력"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!--월  뷰페이저 -->
                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/view_pager_calendar"
                        android:layout_width="match_parent"
                        android:layout_height="300dp" />
                </LinearLayout>

                <!--일정 목록-->
                <LinearLayout
                    android:id="@+id/list_card_section"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/small_radius"
                    android:elevation="2dp"
                    android:orientation="vertical"
                    android:padding="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/calendar_card_section">

                    <!--목록 텍스트-->
                    <TextView
                        android:id="@+id/text_list_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="12dp"
                        android:text="목록"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!--일정 항목 (총 7개까지, 필요 시 확장) -->
                    <!--스케쥴 목록 반복-->
                    <!--3번 이후 항목은 visibility="gone" 초기에는 안보이게 -->
                    <!--각 항목에 대응하는 버튼, 텍스트, 뷰 구성은 동일 -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/schedule_item_layout_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="12dp">
                        <ImageButton
                            android:id="@+id/button_action_item_1"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="항목 1 액션"
                            android:scaleType="centerInside"
                            android:src="@drawable/plus"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />
                        <ImageButton
                            android:id="@+id/button_save_item_1"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="8dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="항목 1 저장"
                            android:scaleType="centerInside"
                            android:src="@drawable/save"
                            app:layout_constraintEnd_toStartOf="@id/button_action_item_1"
                            app:layout_constraintTop_toTopOf="@id/button_action_item_1"
                            app:layout_constraintBottom_toBottomOf="@id/button_action_item_1" />
                        <TextView
                            android:id="@+id/schedule_text_item_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="일정 내용 예시 1"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:minHeight="48dp"
                            android:gravity="center_vertical"
                            app:layout_constraintEnd_toStartOf="@id/button_save_item_1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@id/button_save_item_1"
                            app:layout_constraintBottom_toBottomOf="@id/button_save_item_1" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/schedule_item_layout_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="12dp"
                        android:layout_marginTop="8dp">
                        <ImageButton
                            android:id="@+id/button_action_item_2"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="항목 2 액션"
                            android:scaleType="centerInside"
                            android:src="@drawable/plus"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />
                        <ImageButton
                            android:id="@+id/button_save_item_2"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="8dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="항목 2 저장"
                            android:scaleType="centerInside"
                            android:src="@drawable/save"
                            app:layout_constraintEnd_toStartOf="@id/button_action_item_2"
                            app:layout_constraintTop_toTopOf="@id/button_action_item_2"
                            app:layout_constraintBottom_toBottomOf="@id/button_action_item_2" />
                        <TextView
                            android:id="@+id/schedule_text_item_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="일정 내용 예시 2"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:minHeight="48dp"
                            android:gravity="center_vertical"
                            app:layout_constraintEnd_toStartOf="@id/button_save_item_2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@id/button_save_item_2"
                            app:layout_constraintBottom_toBottomOf="@id/button_save_item_2" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/schedule_item_layout_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="12dp"
                        android:layout_marginTop="8dp"
                        android:visibility="gone"
                        >
                        <ImageButton
                            android:id="@+id/button_action_item_3"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="항목 3 액션"
                            android:scaleType="centerInside"
                            android:src="@drawable/plus"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />
                        <ImageButton
                            android:id="@+id/button_save_item_3"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="8dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="항목 3 저장"
                            android:scaleType="centerInside"
                            android:src="@drawable/save"
                            app:layout_constraintEnd_toStartOf="@id/button_action_item_3"
                            app:layout_constraintTop_toTopOf="@id/button_action_item_3"
                            app:layout_constraintBottom_toBottomOf="@id/button_action_item_3" />
                        <TextView
                            android:id="@+id/schedule_text_item_3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="일정 내용 예시 3"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:minHeight="48dp"
                            android:gravity="center_vertical"
                            app:layout_constraintEnd_toStartOf="@id/button_save_item_3"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@id/button_save_item_3"
                            app:layout_constraintBottom_toBottomOf="@id/button_save_item_3" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/schedule_item_layout_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="12dp"
                        android:layout_marginTop="8dp"
                        android:visibility="gone">
                        <ImageButton
                            android:id="@+id/button_action_item_4"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="항목 4 액션"
                            android:scaleType="centerInside"
                            android:src="@drawable/plus"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />
                        <ImageButton
                            android:id="@+id/button_save_item_4"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="8dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="항목 4 저장"
                            android:scaleType="centerInside"
                            android:src="@drawable/save"
                            app:layout_constraintEnd_toStartOf="@id/button_action_item_4"
                            app:layout_constraintTop_toTopOf="@id/button_action_item_4"
                            app:layout_constraintBottom_toBottomOf="@id/button_action_item_4" />
                        <TextView
                            android:id="@+id/schedule_text_item_4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="일정 내용 예시 4"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:minHeight="48dp"
                            android:gravity="center_vertical"
                            app:layout_constraintEnd_toStartOf="@id/button_save_item_4"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@id/button_save_item_4"
                            app:layout_constraintBottom_toBottomOf="@id/button_save_item_4" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/schedule_item_layout_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="12dp"
                        android:layout_marginTop="8dp"
                        android:visibility="gone">
                        <ImageButton
                            android:id="@+id/button_action_item_5"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="항목 5 액션"
                            android:scaleType="centerInside"
                            android:src="@drawable/plus"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />
                        <ImageButton
                            android:id="@+id/button_save_item_5"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="8dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="항목 5 저장"
                            android:scaleType="centerInside"
                            android:src="@drawable/save"
                            app:layout_constraintEnd_toStartOf="@id/button_action_item_5"
                            app:layout_constraintTop_toTopOf="@id/button_action_item_5"
                            app:layout_constraintBottom_toBottomOf="@id/button_action_item_5" />
                        <TextView
                            android:id="@+id/schedule_text_item_5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="일정 내용 예시 5"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:minHeight="48dp"
                            android:gravity="center_vertical"
                            app:layout_constraintEnd_toStartOf="@id/button_save_item_5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@id/button_save_item_5"
                            app:layout_constraintBottom_toBottomOf="@id/button_save_item_5" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/schedule_item_layout_6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="12dp"
                        android:layout_marginTop="8dp"
                        android:visibility="gone">
                        <ImageButton
                            android:id="@+id/button_action_item_6"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="항목 6 액션"
                            android:scaleType="centerInside"
                            android:src="@drawable/plus"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />
                        <ImageButton
                            android:id="@+id/button_save_item_6"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="8dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="항목 6 저장"
                            android:scaleType="centerInside"
                            android:src="@drawable/save"
                            app:layout_constraintEnd_toStartOf="@id/button_action_item_6"
                            app:layout_constraintTop_toTopOf="@id/button_action_item_6"
                            app:layout_constraintBottom_toBottomOf="@id/button_action_item_6" />
                        <TextView
                            android:id="@+id/schedule_text_item_6"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="일정 내용 예시 6"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:minHeight="48dp"
                            android:gravity="center_vertical"
                            app:layout_constraintEnd_toStartOf="@id/button_save_item_6"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@id/button_save_item_6"
                            app:layout_constraintBottom_toBottomOf="@id/button_save_item_6" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/schedule_item_layout_7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="12dp"
                        android:layout_marginTop="8dp"
                        android:visibility="gone">
                        <ImageButton
                            android:id="@+id/button_action_item_7"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="항목 7 액션"
                            android:scaleType="centerInside"
                            android:src="@drawable/plus"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />
                        <ImageButton
                            android:id="@+id/button_save_item_7"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="8dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="항목 7 저장"
                            android:scaleType="centerInside"
                            android:src="@drawable/save"
                            app:layout_constraintEnd_toStartOf="@id/button_action_item_7"
                            app:layout_constraintTop_toTopOf="@id/button_action_item_7"
                            app:layout_constraintBottom_toBottomOf="@id/button_action_item_7" />
                        <TextView
                            android:id="@+id/schedule_text_item_7"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="일정 내용 예시 7"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:minHeight="48dp"
                            android:gravity="center_vertical"
                            app:layout_constraintEnd_toStartOf="@id/button_save_item_7"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@id/button_save_item_7"
                            app:layout_constraintBottom_toBottomOf="@id/button_save_item_7" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <!--하단앱바-->
        <LinearLayout
            android:id="@+id/bottom_navigation_bar"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:backgroundTint="#2196F3"
            android:background="#31ACB1"
            android:elevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center">

            <!--즐겨찾기 버튼 -->
            <ImageButton
                android:id="@+id/star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:src="@drawable/star"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="16dp"
                app:tint="#FFFFFFFF"
                android:contentDescription="스타"
                android:scaleType="centerInside"/>

            <!--홈 버튼 -->
            <ImageButton
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:src="@drawable/home_rounded"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="16dp"
                app:tint="#FFFFFFFF"
                android:contentDescription="홈"
                android:scaleType="centerInside"/>

            <!--마이페이지 버튼 -->
            <ImageButton
                android:id="@+id/person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:src="@drawable/person"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="16dp"
                app:tint="#FFFFFFFF"
                android:contentDescription="마이페이지"
                android:scaleType="centerInside"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--드로어-->
    <LinearLayout
        android:id="@+id/main_activity_notification_drawer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:visibility="gone"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:elevation="100dp">

        <!--알림-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="알림"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:padding="16dp"
            android:background="#EEEEEE"
            android:gravity="center_horizontal"/>

        <!--알림 RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/main_activity_recycler_view_notifications"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        <!--알림 없을때 텍스트 -->
        <TextView
            android:id="@+id/main_activity_text_no_notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="새로운 알림이 없습니다."
            android:gravity="center"
            android:visibility="gone"
            android:padding="20dp"/>
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
