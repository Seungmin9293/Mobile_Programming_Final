<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExamViewActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0EBF8">

        <!--상단 툴바-->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_exam_view"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="#31ACB1"
            android:backgroundTint="#2196F3"
            android:elevation="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시험일정 전체보기"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:paddingStart="10dp"
                tools:ignore="RtlSymmetry" />

            <!--툴바 알림버튼-->
            <ImageButton
                android:id="@+id/toolbar_notification_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@drawable/al"
                android:padding="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="알림"
                app:tint="#FFF"/>
        </androidx.appcompat.widget.Toolbar>

        <!--검색 영역EditText -->
        <LinearLayout
            android:id="@+id/search_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/toolbar_exam_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!--검색 입력 필드 EditText사용-->
            <EditText
                android:id="@+id/search_edit_text"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="시험명 검색..."
                android:background="@drawable/radius"
                android:padding="12dp"
                android:layout_marginEnd="8dp"
                android:maxLines="1"
                android:imeOptions="actionSearch" />

            <!--검색 버튼 -->
            <ImageButton
                android:id="@+id/search_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/search"
                android:background="@drawable/radius"
                android:backgroundTint="#2196F3"
                app:tint="#FFFFFF"
                android:contentDescription="검색" />
        </LinearLayout>

        <!--시험 목록 스크롤 영역 -->
        <ScrollView
            android:id="@+id/scroll_view_exams"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@id/search_section"
            app:layout_constraintBottom_toTopOf="@id/bottom_navigation_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!--시험 카드뷰 -->
            <LinearLayout
                android:id="@+id/exam_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp" />
        </ScrollView>

        <!--하단앱바-->
        <LinearLayout
            android:id="@+id/bottom_navigation_bar"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="#31ACB1"
            android:backgroundTint="#2196F3"
            android:elevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center">

            <!--즐겨찾기 아이콘 버튼 -->
            <ImageButton
                android:id="@+id/star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:src="@drawable/star"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="16dp"
                app:tint="#FFFFFFFF"
                android:contentDescription="스타"
                android:scaleType="centerInside"/>

            <!-- 홈 아이콘 버튼 -->
            <ImageButton
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/home_rounded"
                android:padding="16dp"
                app:tint="#FFFFFFFF"
                android:contentDescription="홈"
                android:scaleType="centerInside"/>

            <!-- 마이페이지 아이콘 버튼 -->
            <ImageButton
                android:id="@+id/person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/person"
                android:padding="16dp"
                app:tint="#FFFFFFFF"
                android:contentDescription="마이페이지"
                android:scaleType="centerInside"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--드로어 -->
    <LinearLayout
        android:id="@+id/activity_exam_view_notification_drawer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:clickable="true"
        android:focusable="true"
        android:elevation="100dp">

        <!-- 드로어 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="알림"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:padding="16dp"
            android:background="#EEEEEE"
            android:gravity="center_horizontal"/>

        <!-- 알림 리스트 RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/re_noti"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <TextView
            android:id="@+id/renoti_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="알림 없음."
            android:gravity="center"
            android:padding="20dp"/>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>
